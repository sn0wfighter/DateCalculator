<?xml version='1.0' encoding='utf-8'?>
<widget id="com.phonegap.helloworld" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>DateCalculator</name>
    <description>
        Small App to calculate the weekday for a given date
    </description>
    <author email="bill.gates@keemail.me" href="http://phonegap.com">
        Andreas Amberger
    </author>
    <content src="index.html" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="14" />
    <plugin name="cordova-plugin-inappbrowser" source="npm" spec="~1.3.0" />
    <plugin name="cordova-plugin-statusbar" source="npm" spec="~2.1.2" />
    <plugin name="cordova-plugin-whitelist" source="npm" spec="~1.2.1" />
    <platform name="android">
        <icon density="ldpi" src="www/res/icon/android/icon-50.png" />
        <icon density="mdpi" src="www/res/icon/android/icon-50.png" />
        <icon density="hdpi" src="www/res/icon/android/icon-100.png" />
        <icon density="xhdpi" src="www/res/icon/android/icon-100.png" />
        <icon density="xxhdpi" src="www/res/icon/android/icon-500.png" />
        <icon density="xxxhdpi" src="www/res/icon/android/icon-500.png" />
    </platform>
    <platform name="ios">
        <icon height="50" platform="ios" src="www/res/icon/ios/icon-50.png" width="50" />
        <icon height="100" platform="ios" src="www/res/icon/ios/icon-100.png" width="100" />
        <icon height="500" platform="ios" src="www/res/icon/ios/icon-500.png" width="500" />
    </platform>
    <platform name="wp8">
        <icon height="50" platform="wp8" src="www/res/icon/wp8/icon-50.png" width="50" />
        <icon height="100" platform="wp8" src="www/res/icon/wp8/icon-100.png" width="100" />
        <icon height="500" platform="wp8" src="www/res/icon/wp8/icon-500.png" width="500" />
    </platform>
    <platform name="windows">
        <icon height="50" platform="windows" src="www/res/icon/windows/icon-50.png" width="50" />
        <icon height="100" platform="windows" src="www/res/icon/windows/icon-100.png" width="100" />
        <icon height="500" platform="windows" src="www/res/icon/windows/icon-500.png" width="500" />
    </platform>
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
